<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.scoula.domain.financialproduct.jeonseloan.mapper.JeonseLoanMapper">

    <resultMap id="JeonseLoanResultMap" type="org.scoula.domain.financialproduct.jeonseloan.entity.JeonseLoan">
        <id property="jeonseLoanId" column="jeonse_loan_id"/>
        <result property="financialCompanyId" column="financial_company_id"/>
        <result property="productName" column="product_name"/>
        <result property="joinWay" column="join_way"/>
        <result property="minRate" column="base_rate"/>
        <result property="maxRate" column="max_rate"/>
        <result property="avgRate" column="avg_rate"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="visaMinMonths" column="visa_min_months"/>
        <result property="maxPeriodMonths" column="max_period_months"/>
        <result property="rateInfo" column="rate_info"/>
        <result property="loanConditions" column="loan_conditions"/>
        <result property="foreignerAvailable" column="foreigner_available"/>
        <result property="isActive" column="is_active"/>
        <result property="minLoanAmount" column="min_loan_amount"/>
    </resultMap>

    <sql id="whereCondition">
        <where>
            AND is_active=1
            <if test="request.minAmount != null and request.minAmount >= 0">
                AND min_loan_amount >= #{request.minAmount}
            </if>
            <if test="request.maxAmount != null and request.maxAmount > 0">
                AND max_loan_amount &lt;= #{request.maxAmount}
            </if>
        </where>
    </sql>
    <sql id="orderByCondition">
        <choose>
            <when test="request.sortBy != null and request.sortBy.name() == 'MIN_RATE'">
                ORDER BY base_rate ASC
            </when>
            <when test="request.sortBy != null and request.sortBy.name() == 'MAX_RATE'">
                ORDER BY max_rate ASC
            </when>
            <when test="request.sortBy != null and request.sortBy.name() == 'AVG_RATE'">
                ORDER BY avg_rate ASC
            </when>
            <otherwise>
                ORDER BY jeonse_loan_id ASC
            </otherwise>
        </choose>
    </sql>

    <select id="findById" resultMap="JeonseLoanResultMap">
        SELECT *
        FROM jeonse_loan
        WHERE jeonse_loan_id = #{jeonseLoanId}
          AND is_active = 1
    </select>

    <select id="findJeonseLoansWithFilter"
            resultMap="JeonseLoanResultMap">
        SELECT * FROM jeonse_loan
        <include refid="whereCondition"/>
        <include refid="orderByCondition"/>
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <select id="countJeonseLoansWithFilter"
            resultType="int">
        SELECT COUNT(*) FROM jeonse_loan
        <include refid="whereCondition"/>
    </select>
</mapper>
