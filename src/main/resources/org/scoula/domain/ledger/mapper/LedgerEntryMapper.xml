<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.scoula.domain.ledger.mapper.LedgerEntryMapper">

    <resultMap id="ledgerEntryResultMap" type="org.scoula.domain.ledger.entity.LedgerEntry">
        <id property="ledgerEntryId" column="ledger_entry_id"/>
        <result property="amount" column="amount"/>
        <result property="ledgerType" column="ledger_type"/>
        <result property="ledgerVoucherId" column="ledger_voucher_id"/>
        <result property="accountCodeId" column="account_code_id"/>
    </resultMap>

    <insert id="insertBatch" parameterType="java.util.List">
        INSERT INTO ledger_entry (
        amount,
        ledger_type,
        ledger_voucher_id,
        account_code_id
        ) VALUES
        <foreach collection="list" item="entry" separator=",">
            (
            #{entry.amount},
            #{entry.ledgerType},
            #{entry.ledgerVoucherId},
            #{entry.accountCodeId}
            )
        </foreach>
    </insert>

</mapper>